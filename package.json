{
  "name": "iron-code-studios-frontend",
  "version": "1.0.0",
  "description": "Iron Code Studios Website - Frontend",
  "scripts": {
    "start": "cd backend && npm start",
    "dev": "cd backend && npm run dev",
    "install:backend": "cd backend && npm install",
    "test": "cd backend && npm test",
    "test:coverage": "cd backend && npm run test:coverage",
    "lint": "cd backend && npm run lint && eslint js/**/*.js",
    "lint:fix": "cd backend && npm run lint:fix && eslint js/**/*.js --fix",
    "lint:css": "stylelint \"css/**/*.css\"",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
    "build": "npm run lint && npm run test && npm run format:check",
    "build:prod": "npm run build && echo 'Production build complete'",
    "serve": "python3 -m http.server 8000",
    "docker:build": "docker build -t iron-code-studios .",
    "docker:run": "docker run -p 3000:3000 iron-code-studios",
    "docker:dev": "docker-compose up --build",
    "security": "cd backend && npm audit",
    "setup": "npm run install:backend && cp .env.example backend/.env",
    "deploy": "gh-pages -d ."
  },
  "keywords": [
    "website",
    "html",
    "css",
    "javascript",
    "social-impact",
    "ngo"
  ],
  "author": "Iron Code Studios",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.1.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^35.0.0"
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css"
  }
}
